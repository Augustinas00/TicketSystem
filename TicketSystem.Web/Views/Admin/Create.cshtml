@model TicketSystem.Web.Models.Event

<h2>Add Event</h2>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="EventDate">Event Date</label>
        <input asp-for="EventDate" type="date" class="form-control" />
    </div>
    <div>
        <label asp-for="Venue">Venue</label>
        <input asp-for="Venue" class="form-control" />
    </div>
    <div>
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div>
        <label asp-for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div>
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="1">Music</option>
            <option value="2">Sports</option>
            <option value="3">Theater</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>